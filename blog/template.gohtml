{{ define "blog-index" }}

{{ template "head" . }}
<title>blog | seankhliao</title>

<style>
ul {
    padding: 0;
}
ul > li:before {
    display: none;
}
</style>

<header>
    <h2><a href="/blog">b<em>log</em></a></h2>
    <p>Artisanal, <em>hand-crafted</em> blog posts imbued with delayed <em>regrets</em></p>
    {{ template "header-name" }}
</header>

<main>
    <ul>
    {{ range .posts }}
        <li><time datetime="{{ .Date }}">{{ .Date }}</time> | <a href="{{ .URL }}">{{ .Title }}</a></li>
    {{ end }}
    </ul>
</main>

{{ template "foot" . }}

{{ end }}



{{ define "blog-post" }}

{{ template "head" . }}
<title>{{ .title }} | blog | seankhliao</title>

<header>
    <h2><a href="/blog">b<em>log</em></a></h2>
    <p><time datetime="{{ .date }}">{{ .date }}</time><p>
    {{ template "header-name" }}
</header>
<main>
    <h3>{{ .title }}</h3>
    {{ .content }}
</main>

{{ template "foot" . }}

{{ end }}
