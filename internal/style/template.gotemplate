{{ define "layout" }}
<!DOCTYPE html>
<html lang="en">
  <head>
    {{ if not .EmbedStyle }}
    <link rel="preload" href="/base.css" as="style" crossorigin />
    <link rel="preload" href="/inconsolata-var.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/lora-var.woff2" as="font" type="font/woff2" crossorigin />
    {{ end }}

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1" />

    <title>{{ .Title }}</title>

    <!-- prettier-ignore -->
    {{ if not .DisableAnalytics }}{{ template "analytics" }}{{ end }}

    {{ if not .EmbedStyle }}
    <link rel="stylesheet" href="/base.css" crossorigin />
    {{ end }}

    <link rel="canonical" href="{{ .URLCanonical }}" />
    <link rel="manifest" href="/manifest.json" />

    <meta name="theme-color" content="#000000" />
    <meta name="description" content="{{ .Description }}" />

    <link rel="icon" type="image/png" sizes="512x512" href="https://seankhliao.com/icon-512.png" />
    <link rel="apple-touch-icon" href="https://seankhliao.com/icon-512.png" />
    <link rel="shortcut icon" href="https://seankhliao.com/favicon.ico" />

    <style nonce="deadbeef1">
      /* prettier-ignore */
      {{ if .EmbedStyle }}{{ template "basecss" }}{{ end }}
      /* prettier-ignore */
      {{ .Style }}
    </style>
  </head>
  <body>
    <!-- prettier-ignore -->
    {{ if not .DisableAnalytics }}{{ template "analytics-fallback" }}{{ end }}

    <h1>{{ .H1 }}</h1>
    <h2>{{ .H2 }}</h2>

    <hgroup>
      <a href="/">
        <span>S</span>
        <span>E</span>
        <span>A</span>
        <span>N</span>
        <em>K</em>
        <em>.</em>
        <em>H</em>
        <em>.</em>
        <span>L</span>
        <span>I</span>
        <span>A</span>
        <span>O</span>
      </a>
    </hgroup>

    {{ .Main }}

    <footer>
      <a href="https://seankhliao.com/">home</a>
      |
      <a href="https://seankhliao.com/blog/">blog</a>
      |
      <a href="https://github.com/seankhliao">github</a>
      |
      <a href="https://seankhliao.com/terms/">terms</a>
    </footer>
  </body>
</html>
{{ end }}

