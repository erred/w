{
  "hosting": {
    "public": "public/",
    "cleanUrls": true,
    "trailingSlash": true,
    "headers": [
      {
        "source": "*",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; style-src 'unsafe-inline'; script-src-elem  'unsafe-inline' https://www.google-analytics.com; font-src 'self' https://fonts.gstatic.com; connect-src https://*.seankhliao.com https://www.google-analytics.com; img-src *; report-uri https://statslogger.seankhliao.com/json"
          }
        ]
      },
      {
        "source": "/icon-*.png",
        "headers": [{ "key": "Cache-Control", "value": "max-age=2592000" }]
      },
      {
        "source": "**/cert.cbor",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/cert-chain+cbor"
          }
        ]
      },
      {
        "source": "**/*.sxg",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/signed-exchange;v=b3"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      },
      {
        "source": "/(blog|newtab)/?",
        "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
      },
      {
        "source": "/blog/**",
        "headers": [{ "key": "Cache-Control", "value": "max-age=86400" }]
      },
      {
        "source": "/",
        "headers": [{ "key": "Link", "value": "</map.webp>; rel=preload; as=image" }]
      }
    ],
    "redirects": [
      {
        "source": "/{feed,feed.rss,atom,rss}",
        "destination": "/feed.atom",
        "type": 302
      },
      {
        "source": "/l/fb/",
        "destination": "/?utm_source=facebook&utm_medium=profile&utm_campaign=profile",
        "type": 302
      },
      {
        "source": "/l/gh/",
        "destination": "/?utm_source=github&utm_medium=profile&utm_campaign=profile",
        "type": 302
      },
      {
        "source": "/l/ig/",
        "destination": "/?utm_source=instagram&utm_medium=profile&utm_campaign=profile",
        "type": 302
      },
      {
        "source": "/l/tw/",
        "destination": "/?utm_source=twitter&utm_medium=profile&utm_campaign=profile",
        "type": 302
      },
      {
        "source": "/l/li/",
        "destination": "/?utm_source=linkedin&utm_medium=profile&utm_campaign=profile",
        "type": 302
      },
      {
        "source": "/l/li/about/",
        "destination": "/?utm_source=linkedin&utm_medium=profile&utm_campaign=about",
        "type": 302
      }
    ]
  }
}
