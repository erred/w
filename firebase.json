{
  "hosting": {
    "cleanUrls": true,
    "trailingSlash": false,
    "public": "dist/",
    "headers": [
      {
        "source": "**/*.@(ttf|woff)",
        "headers": [{ "key": "Cache-Control", "value": "max-age=31536000" }]
      },
      {
        "source": "**/*.@(webp|png)",
        "headers": [{ "key": "Cache-Control", "value": "max-age=2592000" }]
      }
    ],
    "ignore": [
      "cloudbuild.yaml",
      "firebase.json",
      "Makefile",
      ".gcloudignore",
      ".git/**/*",
      ".gitignore"
    ]
  }
}
